generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Schema for a User
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  roles      Role[]   @default([USER])

  Notes Notes[]
  workout Workout[]
  workoutCycle WorkoutCycle[]
}

// Schema for written notes in a workout or workout cycle
model Notes {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  note      String
  createdAt DateTime @default(now())

  workout   Workout?
  workoutCycle WorkoutCycle?
  user      User @relation(fields: [userId], references: [id])
}

// Schema for a workout plan 
model Workout {
  id          Int      @id @default(autoincrement())
  userId      Int
  title       String
  description String @default("")
  createdAt   DateTime @default(now())
  noteId Int? @unique
  workoutCycleId Int?

  note  Notes? @relation(fields: [noteId], references: [id])
  user        User @relation(fields: [userId], references: [id])
  exercises   Exercise[]
  workoutCycle WorkoutCycle? @relation(fields: [workoutCycleId], references: [id])
}

model WorkoutCycle {
  id          Int      @id @default(autoincrement())
  userId      Int
  title       String
  description String @default("")
  createdAt   DateTime @default(now())
  noteId Int? @unique

  note Notes? @relation(fields: [noteId], references: [id])
  user        User @relation(fields: [userId], references: [id])
  workouts    Workout[]
}

// Schema for a Exercise
model Exercise {
  id            Int      @id @default(autoincrement())
  planId        Int
  exerciseName  String
  exerciseId    String
  sets          Int
  aimed_reps    Int
  aimed_weight  Int

  restTime      String?
  createdAt     DateTime @default(now())

  completed     Boolean @default(false)
  completedAt   DateTime?
  completedWeight Int?
  completedReps Int?
  completedSets Int?

  workout   Workout @relation(fields: [planId], references: [id])
}

// Schema for a Revoked Token
model RevokedToken {
  id        Int      @id @default(autoincrement())
  jti       String   @unique
  createdAt DateTime @default(now())
}

// Enumeration for the different roles of a user
enum Role {
  USER
  ADMIN
}